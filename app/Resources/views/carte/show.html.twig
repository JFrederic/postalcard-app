{% extends 'base.html.twig' %}

{% block body %}
    <h1>Carte</h1>

    <div class="col-xs-12 col-md-6 col-md-offset-1">
        <div class="panel panel-default">
            <div class="panel-image">
                <img class="img-responsive" style="width:100%;" src="{{asset(carte.image)}}" class="panel-image-preview"/>
                <label for="toggle-4"></label>
            </div>
            <div class="panel-body">
                Pour <strong>{{carte.destinataire}}</strong> :
                <p>{{carte.message}}</p>
            </div>
            <div class="panel-footer text-center">
                <a href="#download" class="btn btn-primary">
                    <span class="glyphicon glyphicon-download"></span>
                </a>
                <a href="#" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-sm">
                    <span class="glyphicon glyphicon-share-alt"></span>
                </a>
            </div>
        </div>
    </div>
    <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
              <a href="http://localhost:8000/carte/{{carte.id}}">Copier le lien</a>
              <h3>Envoyer à :</h3>
              
                <form class="" action="/email/envoi" method="get">
                  <div class="form-group">
                    <label for="formGroupExampleInput">Envoyer à : </label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Email">
                    <button type="submit" name="button">Envoyer</button>
                  </div>
                </form>
            </div>
        </div>
    </div>
    <ul class="list-inline">
        <li>
            <a href="{{ path('carte_index') }}" class="btn btn-primary btn-md">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('carte_edit', { 'id': carte.id }) }}" class="btn btn-success btn-md">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input class="btn btn-danger btn-md" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

{% endblock %}
